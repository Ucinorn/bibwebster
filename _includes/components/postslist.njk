<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
			</h3>
			{% if post.data.sku %}
				<p>
					{{ post.data.sku }}
				</p>
			{% endif %}
			{% if post.data.image %}
				<img src="{{ post.data.image }}" width="1280" height="853" alt="photo of my cat">
			{% endif %}
			{% if post.data.price %}
				<button class="snipcart-add-item"
					data-item-id="{post.data.sku}"
					data-item-price="{{ post.data.price / 100 }}"
					data-item-url="{{post.url}}"
					data-item-description="{{post.templateContent}}"
					data-item-image="{{post.data.image}}"
					data-item-name="{{post.data.title}}">
					Add to cart
				</button>
			{% endif %}
			{% if post.data.tags %}
				<p>
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
